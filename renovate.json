{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Batch and auto-merge Maven plugin updates",
      "matchPackagePatterns": ["maven", "-plugin$", "bind-api"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "plugins",
      "automerge": true
    }
  ]
}
